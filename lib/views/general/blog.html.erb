<% @title = _("Budi informiran", :site_name => site_name) %>

<div id="left_column" class="left_column">
  <h1><%=@title %></h1>
  <p>Novosti Ministarstva gospodarstva, poduzetništva i obrta iz područja zaštite potrošača.</p>

  <div id="blog" class="blog">
    <% @blog_items.each do |item| %>
      <div class="blog_post">
        <h2><a href="<%= item['link'][0] %>" target="_blank"><%= h item['title'][0] %></a></h2>
        <div>
          <% if item['encoded'] %>
            <%= sanitize(raw item['encoded'][0]) %>
          <% elsif item['description'] %>
            <%= sanitize(raw item['description'][0]) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if !@twitter_user.empty? %>
  <div id="right_column" class="right_column" role="complementary">
    <div class="act_link">
      <h2><%= _("Stay up to date") %></h2>
      <%= image_tag "feed-16.png", :alt => "RSS icon" %> <a href="<%= @feed_url %>"><%= _("Subscribe to blog") %></a>
    </div>
    <% if AlaveteliConfiguration::twitter_widget_id %>
      <div id="twitter" class="twitter">
        <a class="twitter-timeline" data-dnt=true href="https://twitter.com/<%= AlaveteliConfiguration::twitter_username %>" data-widget-id="<%= AlaveteliConfiguration::twitter_widget_id %>">Tweets by @<%= AlaveteliConfiguration::twitter_username %></a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
    <% end %>
       <div class="fb-page" data-href="https://www.facebook.com/reklamacije.net/" data-tabs="timeline" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/reklamacije.net/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/reklamacije.net/">Reklamacije.net</a></blockquote>
      </div>
  </div>
<% end %>